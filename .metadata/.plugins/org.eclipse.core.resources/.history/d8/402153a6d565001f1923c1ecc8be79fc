    }

    public void getCommentById() {
    	commentServiceImpl.getCommentById(1);
    }

    public void updateCommentStatus() {
    	commentServiceImpl.updateCommentStatus(1, "123");
    }

    public void deleteComment(Integer coid) {
    }
}
